{
	"compilerOptions": {
		"esModuleInterop": true,
		"jsx": "react-jsx",
		"target": "ES6",
		"module": "ESNext",
		"moduleResolution": "Node",
		"noEmitOnError": true,
		"removeComments": true,
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		},
		"lib": ["es2019.object","scripthost","dom.iterable"],
		"resolveJsonModule": true,
		"jsxImportSource": "@emotion/react"

	},
  "ts-node": {
    "esm": true,
    "compilerOptions": {
      "module": "CommonJS",
      "moduleResolution": "NodeNext",
    }
  },
	
	"include": ["src/**/*.ts", "src/**/*.tsx", "demo/*.ts", "demo/*.tsx"],
}